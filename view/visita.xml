			<field name="name">visita.form</field>
			<field name="model">visita.visita</field>
			<field name="arch" type="xml">
				<form string="Visita form">
					<field name="visitante_id" colspan="4" />
                    <field name="fecha_entrada" colspan="4" />
                    <field name="fecha_salida" colspan="4" />
                    <!--field name="empleado_id" colspan="4" />
                    <field name="departamento_id" colspan="4" /-->
				</form>
			</field>
